<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme">
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
    </style>

    <style name="AppTheme.TransparentStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.TransparentStatusBar.50">
        <item name="android:statusBarColor">@color/overlay_50</item>
    </style>

</resources>
